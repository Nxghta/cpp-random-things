#include <iostream>
using namespace std;

int main() {
    
    char op;
    float num1, num2;

    cout << "Entrée un operateur : +, -, *, /: ";
    cin >> op;

    cout << "Entrée deux opéerant"
    cin >> num1 >> num2;

    switch(op) {

        case '+':
            cout << num1 << " + " << num2 << " = " << num1 + num2;
            break;

        case '-':
            cout << num1 << " - " << num2 << " = " << num1 - num2;
            break;
        
        case '*':
            cout << num1 << " * " << num2 << " = " << num1 * num2;
            break;

        case '/':
            cout << num1 << " / " << num2 << " = " << num1 / num2;
            break;

        default:
            //if the operator is other than +,-,*,/, error message is shown
            cout << "Erreur ! l'opérateur n'est pas correct";
            break;
    }

    return 0;
}
